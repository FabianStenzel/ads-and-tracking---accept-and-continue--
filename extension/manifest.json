{
  "manifest_version": 3,
  "name": "Mit Werbung und Tracking - Einwilligen und weiter >",
  "description": "Diese Chrome-Erweiterung zeigt f√ºr jeden Cookie und jede externe Serveranfrage ein Icon. Clicke auf das Symbol in der Suchleiste um Einstellungen vorzunehmen",
  "version": "1.0",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "webRequest",
    "scripting",
    "activeTab",
    "<all_urls>"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
